         <scannerInfoConsoleParser class="org.eclipse.cdt.make.internal.core.scannerconfig.gnu.GCCSpecsConsoleParser"/>
      </scannerInfoProvider>
   </extension>
   <extension
         id="GCCManagedMakePerProjectProfileC"
         name="GNU C/C++ managed make per project SCD profile"
