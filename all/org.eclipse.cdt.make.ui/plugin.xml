   </extension>
   <extension point="org.eclipse.core.filebuffers.documentSetup">
      <participant
            contentTypeId="org.eclipse.cdt.make.core.makefile"
            class="org.eclipse.cdt.make.internal.ui.editor.MakefileDocumentSetupParticipant">
      </participant>
   </extension>
    
   <extension
