      <command
            name="%ActionDefinition.opendecl.name"
            categoryId="org.eclipse.cdt.make.ui.category.source"
            description="%ActionDefinition.opendecl.description"
            id="org.eclipse.cdt.make.ui.edit.text.makefile.opendecl">
