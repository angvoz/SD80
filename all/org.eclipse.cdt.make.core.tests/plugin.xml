<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.cdt.core.LanguageSettingsProvider">
      <provider
            class="org.eclipse.cdt.make.scannerdiscovery.MockBuiltinSettingsDetector"
            id="org.eclipse.cdt.make.core.tests.mock.c.specs.detector"
            name="Test Plugin C Builtin Settings Detector"
            parameter="echo Test Plugin C Builtin Settings Detector">
         <language-scope
               id="org.eclipse.cdt.core.gcc">
         </language-scope>
      </provider>
      <provider
            class="org.eclipse.cdt.make.scannerdiscovery.MockBuiltinSettingsDetector"
            id="org.eclipse.cdt.make.core.tests.mock.c++.specs.detector"
            name="Test Plugin C++ Builtin Settings Detector"
            parameter="echo Test Plugin C++ Builtin Settings Detector">
         <language-scope
               id="org.eclipse.cdt.core.g++">
         </language-scope>
      </provider>
   </extension>
   <extension
         point="org.eclipse.cdt.ui.LanguageSettingsProviderAssociation">
      <id-association
            id="org.eclipse.cdt.make.core.tests.mock.c.specs.detector"
            icon="icons/flask.png">
      </id-association>
      <id-association
            id="org.eclipse.cdt.make.core.tests.mock.c++.specs.detector"
            icon="icons/flask.png">
      </id-association>
   </extension>

</plugin>
